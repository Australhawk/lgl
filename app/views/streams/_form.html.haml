= semantic_form_for @stream , :html => {class: "form-horizontal well"} do |f|
  = f.inputs do
    = f.input :title
    = f.input :account
    = f.input :image
    = f.input :oficial, :as => :boolean
    = f.input :description, :input_html => { :rows => 10, :cols => 20, :maxlength => 10  }
    
  = f.actions do
    = f.action :submit, :as => :input
